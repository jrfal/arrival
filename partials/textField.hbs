<div>
  <label for="{{key}}" class="{{fieldLabelClasses}}">{{label}}</label>
  <input 
    class="{{fieldInputClasses}} {{#if requiredMessages}}{{fieldInvalidInputClasses}}{{/if}}"
    type="{{#if type}}{{type}}{{else}}text{{/if}}"
    id="{{key}}"
    {{#if autocomplete}}autocomplete="{{autocomplete}}"{{/if}}
  />
  {{#if requiredMessages}}
  <div class="{{fieldErrorClasses}}">{{requiredMessage}}</div>
  {{/if}}
</div>
